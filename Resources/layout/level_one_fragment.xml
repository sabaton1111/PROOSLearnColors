
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:minWidth="25px"
    android:minHeight="25px">
    <ImageView
         android:layout_width="300px"
        android:layout_height="300px"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:id="@+id/imageViewLeftBox" />
     <ImageView
        android:background="@mipmap/question"
        android:layout_width="200px"
        android:layout_height="300px"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:id="@+id/imageViewLeftBoxds"
        android:layout_marginLeft="500px"/>
    <ImageView
        android:background="@mipmap/question"
        android:layout_width="300px"
        android:layout_height="300px"
        android:scaleType="centerCrop"
        android:layout_below="@+id/imageViewLeftBox"
        android:adjustViewBounds="true"
        android:id="@+id/imageViewRightBox"
        android:layout_marginTop="0.0dp" />
    <ImageView
        android:background="@mipmap/question"
        android:layout_width="300px"
        android:layout_height="300px"
        android:scaleType="centerCrop"
        android:layout_below="@+id/imageViewLeftBox"
        android:adjustViewBounds="true"
        android:id="@+id/imageViewRightskak"
        android:layout_marginTop="0.0dp" 
    android:layout_marginLeft="500px"/>
</RelativeLayout>