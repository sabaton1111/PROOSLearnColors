
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_levels"
    android:minWidth="25px"
    android:minHeight="25px">
    <ImageView
        android:layout_width="550px"
        android:layout_height="550px"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:id="@+id/imageViewLeftBox"
        android:layout_marginTop="200px"
        android:layout_marginLeft="@dimen/left_margin_value"/>

    <ImageView
        android:layout_width="550px"
        android:layout_height="550px"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:id="@+id/imageViewRightBox"
        android:layout_marginTop="200px"
        android:layout_marginLeft="@dimen/left_margin_value"/>

    <ImageView
        android:background="@mipmap/home_icon"
        android:layout_width="200px"
        android:layout_height="100px"
        android:scaleType="centerCrop"
        android:layout_below="@+id/imageViewLeftBox"
        android:adjustViewBounds="true"
        android:id="@+id/imageViewHome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20px"
        android:layout_marginTop="50px"
        android:layout_marginLeft="20px"/>
    <ImageView
        android:background="@mipmap/speaker"
        android:layout_width="200px"
        android:layout_height="100px"
        android:scaleType="centerCrop"
        android:layout_below="@+id/imageViewLeftBox"
        android:adjustViewBounds="true"
        android:id="@+id/imageViewSound"
        android:layout_marginTop="50px"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20px"
        android:layout_marginRight="20px"/>
                 <ImageView
        android:background="@mipmap/one"
        android:layout_width="150px"
        android:layout_height="230px"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:id="@+id/imageViewLevel"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20px"

        android:layout_marginRight="20px"/>
</RelativeLayout>